<!-- Second Layout -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instruction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:accessibilityLiveRegion="polite"
                android:baselineAligned="false"
                android:contentDescription="@string/audio_instruction_description"
                android:importantForAccessibility="yes"
                android:text="@string/audio_instruction"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/read_question_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/read_question_description"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:importantForAccessibility="yes"
                android:text="@string/read_question"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:contentDescription="@string/answer_input_description"
                android:hint="@string/answer_hint"
                android:importantForAccessibility="yes"
                android:labelFor="@id/answer_et"
                android:textColor="?attr/colorPrimary"
                app:boxBackgroundColor="?attr/colorSurface"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/answer_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:accessibilityLiveRegion="polite"
                    android:backgroundTint="?attr/colorPrimary"
                    android:hint="@string/answer_hint"
                    android:importantForAccessibility="yes"
                    android:inputType="number"
                    android:textColor="?attr/colorOnPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_answer_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/submit_description"
                android:importantForAccessibility="yes"
                android:text="@string/submit"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer"
        android:textColor="?attr/colorOutline"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:contentDescription="@null"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_gravity="bottom|center_horizontal" />

    <include layout="@layout/dialog_result" />

</FrameLayout>