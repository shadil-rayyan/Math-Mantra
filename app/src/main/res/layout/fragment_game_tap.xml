<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Tap Count -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tap_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_tap_count"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="48sp"
            android:contentDescription="@string/tap_count_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/animated_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <!-- GIF View -->
        <ImageView
            android:id="@+id/animated_view"
            android:layout_width="215dp"
            android:layout_height="233dp"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toBottomOf="@+id/tap_count"
            app:layout_constraintBottom_toTopOf="@+id/tap_instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tap Instruction -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tap_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_instruction"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="28sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textAlignment="center"
            android:contentDescription="@string/tap_instruction_description"
            app:layout_constraintTop_toBottomOf="@+id/animated_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.85" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer"
        android:textColor="?attr/colorOutline"
        android:textSize="12sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:importantForAccessibility="no"
        android:contentDescription="@null"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <include layout="@layout/dialog_result" />

</FrameLayout>
