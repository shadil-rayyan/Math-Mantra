<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:contentDescription="@string/day_page_desc"
    tools:context=".view.game.DayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Question text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:accessibilityLiveRegion="polite"
            android:gravity="center"
            android:text="@string/question_text_template"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:importantForAccessibility="yes" />

        <!-- Grid of Day Buttons -->
        <GridLayout
            android:id="@+id/dayButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_gravity="center"
            android:rowOrderPreserved="false"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonday"
                style="@style/DayButton"
                android:text="@string/monday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTuesday"
                style="@style/DayButton"
                android:text="@string/tuesday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWednesday"
                style="@style/DayButton"
                android:text="@string/wednesday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThursday"
                style="@style/DayButton"
                android:text="@string/thursday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFriday"
                style="@style/DayButton"
                android:text="@string/friday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaturday"
                style="@style/DayButton"
                android:text="@string/saturday" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSunday"
                style="@style/DayButton"
                android:text="@string/sunday"
                android:layout_row="2"
                android:layout_column="1" />

        </GridLayout>

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer"
            android:textColor="?attr/colorOutline"
            android:textSize="12sp"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:contentDescription="@null"
            android:focusableInTouchMode="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</ScrollView>
