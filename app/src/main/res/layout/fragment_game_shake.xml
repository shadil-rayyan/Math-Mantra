<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".view.game.ShakeFragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:importantForAccessibility="yes"
    android:contentDescription="@string/shake_page_desc">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="3762dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ring_count"
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:layout_marginTop="268dp"
            android:clickable="false"
            android:contentDescription="@string/shake_count_description"
            android:focusable="false"
            android:importantForAccessibility="yes"
            android:text="@string/shake_count_initial"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ring_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp"
            android:contentDescription="@string/shake_instruction_description"
            android:text="@string/shake_instruction"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/dummyFocusView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:importantForAccessibility="yes"
            android:focusable="true"
            android:contentDescription=""
            android:visibility="invisible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>