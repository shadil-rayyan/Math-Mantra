<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"

  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="50dp"
        >

        <!-- Instruction Text -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate_prompt"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textColor="?attr/colorOnSecondary"
            android:importantForAccessibility="yes"
             />

        <!-- Math Question -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mentalCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_math_question"
            android:textColor="?attr/colorOnSecondary"
            android:layout_margin="10dp"
            android:textSize="40sp"
            android:importantForAccessibility="no"
            android:contentDescription="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/read_question_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/read_question_description"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAccessibility="yes"
            android:text="@string/read_question"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp" />


        <!-- Answer Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/answer_hint"
            android:importantForAccessibility="yes"
            android:labelFor="@id/answer_et"
            android:textColor="?attr/colorPrimary"
            android:contentDescription="@string/content_answer_field"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityLiveRegion="polite"
                android:importantForAccessibility="yes"
                android:inputType="number"
                android:textColor="?attr/colorOnPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_answer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="24sp"
            android:text="@string/submit"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/submit_description" />

    </LinearLayout>

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer"
        android:textColor="?attr/colorOutline"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:contentDescription="@null"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_gravity="bottom|center_horizontal" />

    <include layout="@layout/dialog_result" />



</FrameLayout>
