<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MathsMantra" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- General screen colors -->
        <item name="colorPrimary">@color/light_purple_button</item>
        <item name="colorOnPrimary">@color/light_purple_button_text</item>

        <!-- secondary screen colors -->
        <item name="colorSecondary">@color/dark_activity_bar</item>
        <item name="colorOnSecondary">@color/light_activity_bar_text</item>

        <!-- General screen colors -->
        <item name="colorTertiary">@color/light_dark_landing_button</item>
        <item name="colorOnTertiary">@color/light_dark_landing_text</item>


        <!-- General screen colors -->
        <item name="colorSurface">@color/dark_surface</item>

        <!-- General screen colors -->
        <item name="android:colorBackground">@color/dark_screen_background</item>
        <item name="colorOutline">@color/dark_subtitle_text</item>


        <!-- System status bar color -->
        <item name="android:statusBarColor">@color/dark_activity_bar</item>

        <item name="colorControlActivated">@color/light_dark_landing_button</item>
        <item name="colorControlNormal">?attr/colorAccent</item>


        <item name="colorError">@color/light_red_button</item>


    </style>
</resources>
